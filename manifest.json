{
  "manifest_version": 3,
  "name": "Substack Notes Blocker",
  "version": "1.0.0",
  "description": "Hide Substack Notes feed to focus on newsletter content. Simple, fast, and effective.",
  "permissions": [
    "activeTab",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "*://*.substack.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.substack.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Toggle Substack Notes"
  },
  "commands": {
    "toggle-notes": {
      "suggested_key": {
        "default": "Ctrl+Shift+N"
      },
      "description": "Toggle Notes blocking on/off"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
